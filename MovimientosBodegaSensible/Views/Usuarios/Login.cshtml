@model LoginViewModel

@{
    ViewData["Ttitle"] = "Login";
}

<h1 style="color: white">Inicio de sesión</h1>

@if (ViewData.Keys.Contains("mensaje"))
{
    <p style="color: red">
        @ViewData["mensaje"]
    </p>
}

<div class="card">
    <div class="card-body border-2">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label text-black"></label>
                <input asp-for="Email" autocomplete="off" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label text-black"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Recuerdame" />
                <label class="form-check-label text-black" asp-for="Recuerdame"></label>
            </div>

            <button class="btn btn-primary">Iniciar sesión</button>
            <a class="btn btn-success" asp-action="registro">Crear una nueva cuenta</a>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}